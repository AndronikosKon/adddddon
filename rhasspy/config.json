{
  "name": "Rhasspy Assistant",
  "slug": "rhasspy",
  "version": "2.4.20",
  "description": "Offline voice assistant for Home Assistant",
  "url": "https://github.com/synesthesiam/hassio-addons/tree/master/rhasspy",
  "startup": "application",
  "arch": [
    "aarch64",
    "amd64",
    "armhf"
  ],
  "boot": "auto",
  "map": [
    "share:rw"
  ],
  "options": {
    "user_dir": "/share/rhasspy/profiles",
    "profile": "en",
    "ssl": false,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "asoundrc": ""
  },
  "audio": true,
  "ports": {
    "12101/tcp": 12101,
    "12333/udp": 12333
  },
  "schema": {
    "user_dir": "str",
    "profile": "str",
    "ssl": "bool",
    "certfile": "str",
    "keyfile": "str",
    "asoundrc": "str"
  },
  "homeassistant_api": true,
  "webui": "http://[HOST]:[PORT:12101]/"
}
